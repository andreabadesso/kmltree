<?xml version="1.0" encoding="UTF-8" ?> 
<Module>
    <ModulePrefs title="kmltree example" width="810" height="610" />
    <UserPref name="kml" display_name="kml" default_value="http://kmltree.googlecode.com/hg/examples/kml/hello.kml"/>
    <Content type="html">
        <![CDATA[ 
            <style>
                div {
                    margin:0;
                    padding:0;
                }
                #tree {
                    position:absolute;
                    background-color:yellow;
                    left:0;
                    top:0;
                    overflow:hidden;
                    width:50%;
                    height:100%;
                }
                #map3d {
                    position:absolute;
                    left:400px;
                    top:0px;
                    background-color:blue;
                    width:50%;
                    height:100%;
                }
            </style>
            <div id="content_div">
                <div id="wrapper" style="width:100%;height=100%;border:solid black 1px;">
                    <div id="tree"></div>
                    <div id="map3d"></div>
                </div>
                <script type="text/javascript">
                    // Get userprefs
                    var prefs = new gadgets.Prefs();
                    document.getElementById('tree').innerHTML = prefs.getString('kml');
                </script>
            </div>
        ]]>
    </Content> 
</Module>